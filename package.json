{
  "name": "framework-spies",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "mocha \"packages/**/test/**/*.spec.ts?(x)\"",
    "start": "yarn start:client",
    "start:client": "yarn workspace @sample/app start",
    "start:server": "yarn workspace @sample/server start",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"./**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@file-services/commonjs": "^4.0.1",
    "@file-services/memory": "^4.0.2",
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.12",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/node": "12",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "chai": "^4.2.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.4.1",
    "lerna": "^3.22.1",
    "mini-css-extract-plugin": "^0.11.2",
    "mocha": "^8.1.3",
    "mocha-pup": "^4.0.2",
    "puppeteer": "^5.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "~4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "private": true
}
